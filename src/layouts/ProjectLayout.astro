---
import '@fontsource/fira-sans'
import '@fontsource/ibm-plex-sans'
import { ViewTransitions } from 'astro:transitions'
import Header from '../components/Header.astro'
import Card from '../components/Card.astro'
import { Image } from 'astro:assets'

interface Props {
  title: string
  company: string
  body?: string
}

const { frontmatter } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-background">
    <main class="h-screen w-screen flex justify-center items-center z-20">
      <div
        class="flex flex-col justify-center items-center h-full w-full gap-4 lg:w-2/3"
      >
        <div class="w-full">
          <Header />
        </div>
        <div class="flex flex-row w-full h-full gap-8">
          <div class="w-2/3">
            <div
              class="bg-background border opacity-100 w-full h-full flex flex-col rounded-xl bg-cover bg-center p-8 gap-3"
            >
              <div
                class=`w-full flex flex-col rounded-xl bg-cover bg-center p-8 gap-3`
              >
                <h1 class="title font-title text-4xl w-max">
                  {frontmatter.title}
                </h1>
                <h2 class="font-title text-2xl">{frontmatter.company}</h2>
              </div>
              <slot />
            </div>
          </div>
          <div class="w-1/3 flex flex-col gap-4 py-2">
            <Card title="test" body=":3" />
            <Card title="Data" body=":3" />
            <Card title="Data" body=":3" />
            <Card title="Data" body=":3" />
            <Card title="Data" body=":3" />
          </div>
        </div>
      </div>
    </main>
    <style lang="scss" is:global>
      p,
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        @apply text-text;
      }

      main {
        background: radial-gradient(
          rgba(255, 255, 255, 0.05) 9%,
          transparent 9%
        );
        background-position: 0% 0%;
        background-size: 8vmin 8vmin;
      }

      .title {
        display: inline-block;
        position: relative;
        color: #f0dddb;

        &::after {
          content: '';
          position: absolute;
          width: 100%;
          transform: scaleX(0.01);
          height: 2px;
          bottom: 0;
          left: 0;
          background-color: #f0dddb;
          transform-origin: bottom left;
          animation: underline 1.2s ease-in-out forwards;
          animation-delay: 0.2s;
        }
      }

      @keyframes underline {
        0% {
          transform: scaleX(0.01);
        }
        100% {
          transform: scaleX(1);
        }
      }
    </style>
  </body>
</html>
