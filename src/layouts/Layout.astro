---
import '@/styles/globals.css'
import '@/styles/satoshi.css'
import '@fontsource/ibm-plex-sans'
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content=`Portfolio d'Amine Rahmane, développeur et créateur d'identité`
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content=`Portfolio d'Amine Rahmane, développeur et créateur d'identité - ${title}`
    />
    <meta property="og:url" content="https://amine-rahmane.fr" />
    <meta property="og:image" content="https://amine-rahmane.fr/favicon.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@dasporal" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content=`Portfolio d'Amine Rahmane, développeur et créateur d'identité - ${title}`
    />
    <meta name="twitter:image" content="https://amine-rahmane.fr/favicon.png" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
